# ============================================================================
# FOOTBALLHUB+ - VARIABLES D'ENVIRONNEMENT
# ============================================================================

# Database
MONGODB_URI=mongodb://localhost:27017/footballhub

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRATION=7d

# Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Firebase (Notifications Push)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# RapidAPI (API-Football)
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_HOST=api-football-v1.p.rapidapi.com

# Stripe (Paiements)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLIC_KEY=pk_test_your_public_key

# SendGrid (Emails)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@footballhub.com

# Twilio (SMS - optionnel)
TWILIO_ACCOUNT_SID=AC_your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (Cache - optionnel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 (Stockage fichiers - optionnel)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=footballhub-media

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Features Flags
INITIAL_SYNC=false
ENABLE_CRON_JOBS=true
ENABLE_WEBSOCKET=true
ENABLE_NOTIFICATIONS=true

# Logging
LOG_LEVEL=debug
